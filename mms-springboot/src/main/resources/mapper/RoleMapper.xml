<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://www.mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.moumouzhandui.mms.mapper.RoleMapper">

    <resultMap id="BaseResultMap" type="com.moumouzhandui.mms.entity.Role">
        <id property="id" column="id" jdbcType="INTEGER"/>
        <result property="roleName" column="role_name" jdbcType="VARCHAR"/>
        <result property="roleLabel" column="role_label" jdbcType="VARCHAR"/>
        <result property="isDisable" column="is_disable" jdbcType="TINYINT"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <resultMap id="RoleResultMap" type="com.moumouzhandui.mms.pojo.dto.RoleDTO">
        <id property="id" column="id" jdbcType="INTEGER"/>
        <result property="roleName" column="role_name" jdbcType="VARCHAR"/>
        <result property="roleLabel" column="role_label" jdbcType="VARCHAR"/>
        <result property="isDisable" column="is_disable" jdbcType="TINYINT"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
        <collection property="menuIdList" ofType="java.lang.Integer">
            <constructor>
                <arg column="menu_id"/>
            </constructor>
        </collection>
        <collection property="resourceIdList" ofType="java.lang.Integer">
            <constructor>
                <arg column="resource_id"/>
            </constructor>
        </collection>
    </resultMap>
    <resultMap id="RolePermissionMap" type="com.moumouzhandui.mms.pojo.dto.ResourceRoleDTO">
        <id column="id" property="id"/>
        <result column="url" property="url"/>
        <result column="request_method" property="requestMethod"/>
        <collection property="roleList" ofType="java.lang.String">
            <constructor>
                <arg column="role_label"/>
            </constructor>
        </collection>
    </resultMap>

    <sql id="Base_Column_List">
        id,role_name,role_label,
        is_disable,create_time,update_time
    </sql>
    <select id="listRole" resultMap="RoleResultMap">
        SELECT
        r.id,
        r.role_name,
        r.role_label,
        r.is_disable,
        r.create_time,
        r.update_time,
        rm.menu_id,
        rr.resource_id
        FROM
        (
        SELECT
        id,
        role_name,
        role_label,
        is_disable,
        create_time,
        update_time
        FROM
        sys_role
        <where>
            <if test="condition.keywords != null">
                role_name like concat('%',#{condition.keywords},'%')
            </if>
        </where>
        Limit #{current}, #{size}
        ) r
        LEFT JOIN sys_role_resource rr ON rr.role_id = r.id
        LEFT JOIN sys_role_menu rm ON rm.role_id = r.id
        ORDER BY r.id
    </select>
    <select id="listResourceRoles" resultMap="RolePermissionMap">
        SELECT
        re.id,
        url,
        request_method,
        role_label
        FROM
        sys_resource re
        LEFT JOIN sys_role_resource rep on re.id = rep.resource_id
        LEFT JOIN sys_role r on rep.role_id = r.id
        WHERE
        parent_id is NOT NULL
        AND is_anonymous = 0
    </select>
    <select id="listRolesByUserInfoId" resultType="java.lang.String">
        SELECT
        role_label
        FROM
        sys_role r,
        tb_user_role ur
        WHERE
        r.id = ur.role_id
        AND ur.user_id = #{userInfoId}
    </select>
</mapper>
